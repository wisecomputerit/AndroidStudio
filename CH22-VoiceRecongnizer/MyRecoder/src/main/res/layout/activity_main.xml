<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:orientation="horizontal"
        android:background="@drawable/round"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:gravity="center_horizontal" android:layout_margin="5dp">

        <Button android:id="@+id/btnPlay" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="@string/play"
            android:drawableTop="@drawable/player_play_gray"
            android:onClick="onClick"
            android:layout_weight="1"/>
        <Button android:id="@+id/btnDelete" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="@string/delete"
            android:drawableTop="@drawable/delete_gray"
            android:onClick="onClick"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:background="@drawable/round"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:gravity="center_horizontal" android:layout_margin="5dp">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>
    <ImageView
        android:layout_margin="30dp"
        android:id="@+id/imageView1"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/media_record_off" />

</LinearLayout>

