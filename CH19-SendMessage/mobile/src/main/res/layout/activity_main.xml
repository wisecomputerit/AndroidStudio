<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FFFFFFFF">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="傳送文字"
        android:onClick="onClick"
        android:id="@+id/sendBtn"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon1"
        android:onClick="onClick"
        android:id="@+id/button1"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/button2"
        android:layout_toStartOf="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon2"
        android:onClick="onClick"
        android:id="@+id/button2"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:layout_below="@+id/sendBtn"
        android:layout_alignEnd="@+id/sendBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon3"
        android:onClick="onClick"
        android:id="@+id/button3"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:layout_below="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_alignEnd="@+id/button1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon4"
        android:onClick="onClick"
        android:id="@+id/button4"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:layout_below="@+id/button1"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="早安 Android"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/button3"
        android:background="#FFaaaaaa"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignStart="@+id/button3"
        android:id="@+id/linearLayout">


        <RelativeLayout
            android:layout_margin="1sp"
            android:background="#FFFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
